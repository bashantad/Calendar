                                <div class="tooltip left">
                                    <span class="avatar">
                                    </span>
                                    <h5><%= user.name%></h5>
                                    <h6><%= user.email%></h6>
                                    <address><%= user.phone%></address>
                                </div>
                            </li>
                            <% end %>
                        </ul>
                    </nav>

                    <nav class="subnav">
