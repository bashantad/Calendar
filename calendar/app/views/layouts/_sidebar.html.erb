      <section>
            <div class="container_8 clearfix">

                <!-- Sidebar -->

                <aside class="grid_1">

                    <nav class="global">
                        <ul class="clearfix">
                            <li><a class="nav-icon icon-house" href="<%= root_path %>">Home</a></li>
                            <li><a class="nav-icon icon-time" href="#">Latest Activity</a></li>
